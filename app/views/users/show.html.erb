<% provide(:title,"#{@user.first_name} #{@user.last_name}") %>

<div class="row-fluid">
  <div class="span12">
    <div class="row">
      <div class="span4">
        <p><%=t :first_name%></p> 
      </div>
      <div class="span4">
        <p><b><%=@user.first_name%></b></p>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <p><%=t :last_name%></p>
      </div>
      <div class="span4">
        <p><b><%=@user.last_name%></b></p>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <p><%=t :email%></p> 
      </div>
      <div class="span4">
        <p><b><%=@user.email%></b></p>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <p><%=t :phone_number%></p> 
      </div>
      <div class="span4">
        <p><b><%=@user.phone_number%></b></p>
      </div>
    </div>
    <div class="row">
      <div class="span4">
        <p><%=t :account_type%></p> 
      </div>
      <div class="span4">
        <% if admin? %>
          <%= render 'change_type_button', user: @user%>
        <% else %>
          <b><%=eval("t :#{@user.type.downcase}")%></b>
        <% end %>
      </div>
    </div>
    <% if current_user? @user %>
      <br><br><br>
      <div class="row">
        <div class="span3">
          <%= button_to (t :change_password), change_password_user_path(@user), class: 'btn', method: :post %>
        </div>
        <div class="span3">
          <%= button_to (t :edit_profile), edit_user_path(@user), class: 'btn', method: :get %>
        </div>
      </div>
    <% end %>
  </div>
</div>

