<% provide(:title, (t :signup)) %>

<div class="hero-unit">
  <h1><%= t :signup %></h1>
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label "#{(t :first_name)}*" %>
        <%= f.text_field :first_name %>

      
        <%= f.label "#{(t :last_name)}*" %>
        <%= f.text_field :last_name %>

        <%= f.label "#{(t :email)}*" %>
        <%= f.text_field :email %>

        <%= f.label "#{(t :phone_number)}*" %>
        <%= f.number_field :phone_number %>

        <%= f.label "#{(t :password)}*" %>
        <%= f.password_field :password %>

        <%= f.label "#{(t :password_confirmation)}*" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit (t :create), class: "btn btn-large btn-primary" %>
      <% end %>
      <small><%= t :mandatory_field %></small>
    </div>
  </div>
</div>

