<% provide(:title,@league.name) %>
<h3><%=@league.name%></h3>
<div class="row-fluid">

      <h4><%=(t :league_details)%></h4>
      <div class="row-fluid">
        <div class="span2">
          <b><%=(t :prize)%></b>
        </div>
        <div class="span10">
          <%=@league.prize%>
        </div>
      </div>
      <br><br>
      <div class="row-fluid">
        <div class="span2">
          <b><%=(t :description)%></b>
        </div>
        <div class="span10">
          <%=@league.description%>
        </div>
      </div>
      <br><br>
      <div class="row-fluid">
        <div class="span11">
          <div class="span4">
            <h5><%=(t :timetable)%></h5>
          </div>
          <div class="span4">
            <h5><%=(t :table)%></h5>
          </div>
        </div>
      </div>
</div>
