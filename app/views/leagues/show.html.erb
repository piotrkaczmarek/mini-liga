<% provide(:title,@league.name) %>
<h1><%=@league.name%></h1>
<div class="row-fluid">

      <h4><%=(t :league_details)%></h4>
      <div class="row-fluid">
        <div class="span1">
          <h5><%=(t :prize)%></h5>
        </div>
        <div class="span10">
          <%=@league.prize%>
        </div>
      </div>
      <br><br>
      <div class="row-fluid">
        <div class="span1">
          <h5><%=(t :description)%></h5>
        </div>
        <div class="span10">
          <%=@league.description%>
        </div>
      </div>
      <br><br>
      <div class="row-fluid">
        <div class="span11">
          <div class="span4">
            <h5><%=(t :timetable)%></h5>
          </div>
          <div class="span4">
            <h5><%=(t :table)%></h5>
          </div>
        </div>
      </div>
</div>
