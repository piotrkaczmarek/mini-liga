<% provide(:title, (t :add_league)) %>

<div class="hero-unit">
  <h4><%= t :add_league %></h4>
  <div class="row">
    <div class="span6 offset3">
      <%= form_for(@league) do |f| %>
        <%= render "leagues/form_body", f: f %>
        <%= f.submit (t :create), class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

