<% provide(:title, (t :signin)) %>
<h1><%=(t :signin)%></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
      <%= f.submit (t :signin), class: "btn btn-large btn-primary" %>
    <% end %>

    <p><%=(t :are_you_new)%> <%= link_to (t :signup), signup_path %></p>
  </div>
</div>
