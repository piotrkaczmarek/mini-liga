<header class="navbar navbar-fixed-top navbar">
  <div class="navbar-inner">
        <%= link_to (t :multileague), root_path, class: "brand", id: "logo" %>
        <ul class="nav">
          <li><%= link_to (t :home),    root_path %></li>
        <% if signed_in? %>
          <li><%= link_to (t :my_account), user_path(current_user)%></li>
          <% if admin? %>
            <li><%= link_to (t :manage_users), users_path%></li>         
          <% end %>
          <% if keeper? %>
            <li><%= link_to (t :my_games), leagues_keeper_path(current_user) %></li>    
          <% end %>
          <li><%= link_to (t :signout), signout_path, method: "delete" %></li>
        <% else %>
          <li><%= link_to (t :signin), signin_path %></li>
          <li><%= link_to (t :signup), signup_path %></li>
        <% end %>


        </ul>
        <ul class="nav pull-right">
          <li><%= link_to 'PL',    root_path(locale: 'pl') %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to 'EN', root_path(locale: 'en') %></li>
        </ul>
      </nav>
  </div>
  <% if keeper_toolbar? %>
    <%= render 'layouts/keeper_toolbar' %>
  <% else %>
    <%= render 'layouts/home_toolbar' %>
  <% end %>

</header>
